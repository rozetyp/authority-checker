{
  "manifest_version": 3,
  "name": "Reliable DA Checker",
  "version": "1.0",
  "description": "Instantly check Domain Authority (DA) and Page Authority (PA) without the bloat.",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "https://lsapi.seomoz.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
